        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "Ghorans take a \u20132 penalty to attack rolls and Acrobatics checks to escape a grapple against a creature that uses the grab ability with a bite natural weapon.",
                "name": "Delicious",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "Despite being plant creatures, ghorans don\u2019t gain the standard immunities associated with creatures of the plant type. Instead, they gain a +2 racial bonus on saving throws against mindaffecting effects, paralysis, poison, polymorph, sleep, and stunning effects, unless the effect specifies that it is effective against plants.",
                "name": "Limited Plant Benefits",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "Ghorans undergo photosynthesis to gain nutrition instead of eating (although they can eat if they so wish). A ghoran can go without light (either sunlight or UV light, such as from starships) for 3 days, after which they must attempt Constitution checks to avoid <a href=\"Rules.aspx?Name=Environmental%20Rules&amp;Category=Environment\" style=\"text-decoration:underline\">starvation</a>.",
                "name": "Photosynthesis",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            }
        ]
