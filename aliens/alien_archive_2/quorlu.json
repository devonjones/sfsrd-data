        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "A quorlu has resistance 5 to fire that stacks with one other source of fire resistance.",
                "name": "Endothermic",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "A quorlu\u2019s silicon-based physiology grants it immunity to disease and poison, and it gains no benefit from drugs, medicinals, and similar nonmagical substances. It also gains a +2 racial bonus to saving throws against bleed effects. A quorlu doesn\u2019t breathe or suffer the normal environmental effects of being in a vacuum.",
                "name": "Lithic",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "A quorlu gains a +4 racial bonus to AC against combat maneuvers to bull rush, reposition, or trip.",
                "name": "Stable",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "When a quorlu takes cold damage, it becomes fatigued for 1 round. This effect doesn\u2019t cause a fatigued quorlu to become exhausted.",
                "name": "Susceptible to Cold",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "A quorlu can dig through soil at a rate of 5 feet per minute. A quorlu can use this ability combined with its internal heat to dig through stone at a rate of 1 foot per minute. When it digs, a quorlu can leave a tunnel behind.",
                "name": "Tunneler",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            }
