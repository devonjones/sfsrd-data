        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "Due to generations of experimentation, a hobbe hound\u2019s blood is a cocktail of unstable chemicals that reacts unpredictably to certain pharmaceuticals. When a hobbe hound is injected with a medicinal (usually requiring a successful melee attack against its KAC by a foe), it immediately takes an amount of damage equal to 1d6 \u00d7 the medicinal\u2019s tier, in addition to the medicinal\u2019s usual effects.",
                "name": "Chemical Intolerance",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "A hobbe hound\u2019s skin releases an oily residue that makes it difficult to keep hold of or trap. A hobbe hound gains a +4 circumstance bonus to Acrobatics checks to escape.",
                "name": "Skin Secretions",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "As a reaction, when a hobbe hound successfully grabs a Medium or smaller creature with its bite attack, it can violently shake the grabbed creature. A creature shaken in this way gains the off-target condition for 1d3+1 rounds. The creature can reduce this time to 1 round by succeeding at a DC 11 Fortitude saving throw.",
                "name": "Worry",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            }
