        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "A shaitan can pinpoint the location of a creature touching the same ground the shaitan is on or on a solid surface connected to that ground.",
                "name": "Blindsight",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "A shaitan gains a +1 bonus to attack and damage rolls if both it and its foe are touching the solid surface of a planet or an asteroid. If an opponent is airborne or waterborne, the shaitan takes a \u00e2\u0088\u00922 penalty to attack and damage rolls. These modifiers apply to initiating or resisting bull rush combat maneuvers.",
                "name": "Earth Mastery",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "As the earth glide universal creature rule, but the shaitan can also move through metal.",
                "name": "Metal Glide",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "As a standard action, a shaitan can touch a single metal object of no more than 1 bulk and transform it into any other metal. The transformation lasts 1 day.",
                "name": "Metalmorph",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "Any melee attack a shaitan makes against a foe adjacent to an earth, stone, or metal surface gains the entangle weapon special property as if from a weapon with an item level equal to the shaitan\u2019s CR. The surface does the entangling, rather than the weapon.",
                "name": "Stone Curse",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            }
        ]
