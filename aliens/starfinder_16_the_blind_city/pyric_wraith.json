        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "When a creature within 30 feet takes fire damage, a pyric wraith regains a number of Hit Points equal to the damage the creature took, up to a maximum equal to the wraith\u2019s CR per round.",
                "name": "Ash Consumption",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "Light within 10 feet of a pyric wraith increases by two steps. Light for 10 more feet beyond that increases by one step. Magical darkness decreases this light only if from a source with a CR or level higher than the wraith\u2019s CR.",
                "name": "Illuminated",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "The fire damage of a pyric wraith burns body and spirit, ignoring fire resistance and dealing half damage even to creatures with fire immunity. A creature burning due to this fire can gain no bonuses to end that condition. A creature that dies due to pyric fire damage becomes a pyric revenant 1d4 hours later.",
                "name": "Pyric Fire",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "A pyric wraith can launch a ray of pyric fire with a range increment of 30 feet and a maximum range of 150 feet.",
                "name": "Pyric Ray",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            }
        ],
        "afflictions": [
