        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "As a standard action, an olghuth can scream in anguish. Each creature within 30 feet of the olghuth takes 11d6 sonic damage and is shaken for 1d4 rounds. A creature that succeeds at a DC 17 Will save takes half damage and reduces the shaken condition to 1 round. An olghuth can use this ability every 1d6 rounds.",
                "name": "Agonized Wail",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "As a ranged attack, an olghuth can heave a gob of caustic mucous with a range increment of 30 feet and the sicken critical hit effect.",
                "name": "Caustic Mucous",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "After eating a creature with an Intelligence of 6 or higher who died within the last 24 hours, an olghuth gains the ability to speak Aklo for a number of minutes equal to the CR of the consumed creature. During this time, the olghuth becomes euphoric and can\u2019t use agonized wail.",
                "name": "Consumptive Linguist",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "As a full action, an olghuth can move up to double its speed. Each creature and vehicle the olghuth is adjacent to at any point during its movement takes 2d6+10 slashing damage from the olghuth\u2019s razor sharp fins and spines. A creature that succeeds at a DC 17 Reflex save takes half damage.",
                "name": "Sideswipe",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            }
        ]
