        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "As a standard action, a psychemental can emit a mental blast that stuns all creatures within range of its telepathy for 1 round. Other psychementals are immune to this effect. Once a creature has been affected by synaptic pulse, it\u2019s immune to synaptic pulse for 24 hours.",
                "name": "Synaptic Pulse",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "Creatures within 30 feet of a psychemental are affected by an impairing mind fog. Creatures inside the aura must succeed at a DC 12 Will save or take a \u20131 penalty to Will saves and Intelligence- and Wisdom-based skill checks.",
                "name": "Mental Static",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "A psychemental that moves through a creature can erase the memories and experiences of that creature. When it does so, the target loses one randomly determined spell, as if the spell had been cast, and the psychemental regains 5 Hit Points. A psychemental can affect a given creature only once per day with this ability.",
                "name": "Mindwipe",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            }
