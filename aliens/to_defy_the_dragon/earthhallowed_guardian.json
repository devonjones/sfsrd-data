        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "The eyes of an earthhallowed guardian emit a bright glow from the wellspring energy infused within. A creature who can see an earthhallowed guardian must succeed at a DC 17 Fortitude saving throw against this ability, or it's blinded until the beginning of its next turn.",
                "name": "Radiant Gaze",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "A creature who takes critical hit damage from an earthhallowed guardian must attempt a DC 17 Reflex save. On a failure, all charges are drained from the battery of a technological weapon the creature is wielding; if the creature is wielding more than one technological weapon, the weapon drained is determined randomly. If the earthhallowed guardian successfully siphons charges this way, it gains the benefits of haste until the end of its next turn.",
                "name": "Siphon Charge",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "As a swift action, an earthhallowed guardian can form nearby wellspring energy into a superheated lance that functions as a thrown weapon with a range of 40 feet. The earthhallowed guardian must be within 60 feet of a wellspring fissure to use this ability.",
                "name": "Wellspring Lance",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            }
