        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "A shadow giant inflicts its energy drain attack no more than once per round via its first successful melee attack or via hurl debris.",
                "name": "Energy Drain",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "The mighty strength of a giant allows it to turn nearly anything into a ranged weapon. A giant is assumed to have such debris available (either loose or readily torn from the environment without requiring an extra action) unless the GM rules otherwise. Hurled debris has a range increment equal to the giant\u2019s Strength modifier \u00d7 5 feet. Such attacks also create difficult terrain in a 5-foot-radius area around the target, or a 10-foot-radius area for Huge and larger giants.",
                "name": "Hurl Debris",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "As a move action in any illumination other than direct sunlight, a shadow giant can cloak itself in moving shadows that grant it concealment (20% miss chance) for 1d6+6 rounds. It can use this ability three times per day.",
                "name": "Shadow Cloak",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            }
