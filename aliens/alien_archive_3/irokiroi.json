        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "When an irokiroi is killed, its gas bladder loses cohesion and explodes in a burst of high-frequency sound and toxic gases. Each creature within 15 feet of the irokiroi takes 2d6 sonic damage and is deafened for 1d4 rounds; with a successful DC 13 Fortitude save, a creature takes half the damage and negates the deafened effect. The area in a 30-foot radius from the irokiroi becomes a dense cloud of caustic fumes that provide concealment. A creature that enters or starts its turn in the cloud takes 2d4 acid damage. The cloud can be dispersed in the same way as fog cloud and otherwise dissipates on its own in 1 minute.",
                "name": "Death Throes",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "An irokiroi\u2019s sonic burst is a high-frequency screech that can target a single creature within 40 feet.",
                "name": "Sonic Burst",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "If an irokiroi\u2019s bite attack hits the target\u2019s KAC + 4, the irokiroi deals its normal damage and automatically trips the target (this takes no action).",
                "name": "Topple",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            }
