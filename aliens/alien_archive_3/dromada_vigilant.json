        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "Once per day at the beginning of a combat in which it isn\u2019t surprised, a dromada can emit a deep moan that alerts its herd to nearby danger, granting allies within 50 feet who can hear it a +4 morale bonus to their initiative checks for that combat.",
