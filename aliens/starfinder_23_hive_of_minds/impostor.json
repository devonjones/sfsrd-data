        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "As a swift action, an impostor can manifest a blade made of pure doubt and cold darkness in its hand. This blade exists only when the impostor wields it, and they can dismiss it at will (this takes no action).",
                "name": "Doubt Blade",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "A creature that fails to hit an impostor is filled with self-doubt and must succeed at a DC 18 Will saving throw or gain the shaken condition until the end of its next turn. This is a mind\u2011affecting effect.",
                "name": "Enhance Doubt",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "As a move action, an impostor can alter its face into a twisted version of the face of a creature within 15 feet that can see it. The targeted creature must then succeed at a DC 18 Will saving throw or gain the flat-footed condition against the impostor until the beginning of the impostor\u2019s next turn. This is a mind-affecting, sense-dependent effect.",
                "name": "Mocking Visage",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "An impostor takes half again as much damage (+50%) when it takes damage from a creature benefiting from a morale bonus.",
                "name": "Vulnerability to Self-Confidence",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            }
