        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "As a standard action, a Swarm klendat can bore into the mind of a single target within 100 feet that it can sense with its blindsight. The target must succeed at a DC 20 Will save or be stunned for 1 round, take 4d10 damage, and the klendat gets the answer to one question of its choice from the target\u2019s mind. Targets that successfully save still take 2d10 damage. This is a mind-affecting effect.",
                "name": "Psychic Interrogation",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "text": "The klendat is mostly brain matter, and some attacks tear through its delicate neurons to deal especially severe wounds. When a creature hits a Swarm klendat with a critical hit, it deals an additional 50% damage (after the critical damage is calculated).",
                "name": "Vulnerable to Critical Hits",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex"
            }
